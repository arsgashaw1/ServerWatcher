{
  "servers": [
    {
      "serverName": "U3172QA",
      "path": "/a/b/c",
      "description": "QA Server logs"
    },
    {
      "serverName": "U3172PROD",
      "path": "/u/prod/logs",
      "description": "Production Server logs"
    },
    {
      "serverName": "U3172DEV",
      "path": "/u/dev/logs",
      "description": "Development Server logs"
    },
    {
      "serverName": "MAINFRAME-US",
      "path": "/mainframe/logs",
      "description": "IBM Mainframe US logs (EBCDIC) - uses Java charset",
      "encoding": "EBCDIC"
    },
    {
      "serverName": "MAINFRAME-ZOS",
      "path": "/zos/logs",
      "description": "z/OS Unix logs (EBCDIC-1047) - uses Java charset",
      "encoding": "Cp1047"
    },
    {
      "serverName": "MAINFRAME-ZOS-ICONV",
      "path": "/zos/logs2",
      "description": "z/OS Unix logs using iconv for better IBM compatibility",
      "encoding": "IBM-1047",
      "useIconv": true
    },
    {
      "serverName": "MAINFRAME-ISO-TO-EBCDIC",
      "path": "/mainframe/converted",
      "description": "Files converted from ISO8859-1 to IBM-1047 via iconv",
      "encoding": "IBM-1047",
      "useIconv": true
    }
  ],
  "watchPaths": [],
  "filePatterns": [
    "*.log",
    "*.txt",
    "*.out"
  ],
  "exceptionPatterns": [
    ".*Exception.*",
    ".*Error:.*",
    ".*at\\s+[\\w.$]+\\([^)]+\\).*",
    ".*Caused by:.*",
    ".*FATAL.*",
    ".*Throwable.*"
  ],
  "errorPatterns": [
    ".*\\bERROR\\b.*",
    ".*\\bFAILED\\b.*",
    ".*\\bFAILURE\\b.*"
  ],
  "warningPatterns": [
    ".*\\bWARN\\b.*",
    ".*\\bWARNING\\b.*"
  ],
  "pollingIntervalSeconds": 2,
  "maxIssuesDisplayed": 500,
  "enableSound": false,
  "windowTitle": "Log Issue Dashboard",
  "webServerPort": 8080
}
