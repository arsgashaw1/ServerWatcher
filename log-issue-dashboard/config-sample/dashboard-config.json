{
  "servers": [
    {
      "serverName": "MAT12Q3S",
      "path": "/path/to/mat/logs",
      "description": "MAT server logs with mixed encodings",
      "encoding": "ISO8859-1",
      "fileEncodings": {
        "mat-extract.log": "IBM-1047",
        "application-server.log": "ISO8859-1"
      }
    },
    {
      "serverName": "ZOS-SERVER",
      "path": "/zos/logs",
      "description": "z/OS EBCDIC logs - converted using: iconv -f IBM-1047 -t ISO8859-1",
      "encoding": "IBM-1047"
    },
    {
      "serverName": "LINUX-SERVER",
      "path": "/var/log/app",
      "description": "Linux server logs (UTF-8 default)"
    },
    {
      "serverName": "LEGACY-SERVER",
      "path": "/legacy/logs",
      "description": "Legacy server logs (ISO8859-1 direct read)",
      "encoding": "ISO8859-1"
    }
  ],
  "watchPaths": [],
  "filePatterns": [
    "*.log",
    "*.txt",
    "*.out"
  ],
  "exceptionPatterns": [
    ".*Exception.*",
    ".*Error:.*",
    ".*at\\s+[\\w.$]+\\([^)]+\\).*",
    ".*Caused by:.*",
    ".*FATAL.*",
    ".*Throwable.*"
  ],
  "errorPatterns": [
    ".*\\bERROR\\b.*",
    ".*\\bFAILED\\b.*",
    ".*\\bFAILURE\\b.*"
  ],
  "warningPatterns": [
    ".*\\bWARN\\b.*",
    ".*\\bWARNING\\b.*"
  ],
  "pollingIntervalSeconds": 2,
  "maxIssuesDisplayed": 500,
  "enableSound": false,
  "windowTitle": "Sentinel",
  "webServerPort": 8080
}
